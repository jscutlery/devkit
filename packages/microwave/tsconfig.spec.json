{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "nodenext",
    "types": ["jest", "node"],
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "files": ["src/test-setup.ts"],
  "include": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "testing/**.ts",
    "**/*.d.ts",
    "jest.config.ts"
  ],
  "exclude": ["cypress/support/**/*.ts", "**/*.cy.ts"]
}
