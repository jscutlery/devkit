{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": [],
    "target": "ES2022",
    "useDefineForClassFields": false
  },
  "exclude": [
    "src/test-setup.ts",
    "**/*.spec.ts",
    "testing/**.ts",
    "**/*.test.ts",
    "cypress/support/**/*.ts",
    "**/*.cy-spec.ts",
    "jest.config.ts"
  ],
  "include": ["src/**/*.ts"]
}
